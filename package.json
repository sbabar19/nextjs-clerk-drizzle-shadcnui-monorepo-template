{
  "name": "nextjs-shadcn-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "pnpm run dev --filter=web",
    "web:build": "pnpm run build --filter=web",
    "web:db:generate": "pnpm --filter=backend db:generate",
    "web:db:migrate:dev": "dotenv -e apps/web/.env.local -- pnpm --filter=backend db:migrate",
    "web:db:studio:dev": "dotenv -e apps/web/.env.local -- pnpm --filter=backend db:studio",
    "web:db:migrate:prod": "dotenv -e apps/web/.env.production -- pnpm --filter=backend db:migrate",
    "web:db:studio:prod": "dotenv -e apps/web/.env.production -- pnpm --filter=backend db:studio"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0"
  }
}
